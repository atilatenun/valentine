<script>
/* Catch the heart */
const heart=document.getElementById("heart");
const msg=document.getElementById("heart-message");

function moveHeart(){
  heart.style.top=Math.random()*150+"px";
  heart.style.left=Math.random()*250+"px";
}
moveHeart();
heart.onmouseover=moveHeart;
heart.onclick=()=>{
  heart.style.display="none";
  msg.classList.add("show");
};

/* Jump game */
const canvas=document.getElementById("game");
const ctx=canvas.getContext("2d");

let player={x:140,y:350,w:12,h:18,vy:0,jumping:false};
const gravity=0.5;
const platforms=[
{x:100,y:320,w:80,h:8},
{x:40,y:260,w:80,h:8},
{x:160,y:200,w:80,h:8},
{x:80,y:140,w:80,h:8}
];
const finish={x:130,y:90,w:40,h:10};
let won=false;

function jump(){
  if(!player.jumping && !won){
    player.vy=-8;
    player.jumping=true;
  }
}

function update(){
ctx.clearRect(0,0,300,400);
player.vy+=gravity;
player.y+=player.vy;

platforms.forEach(p=>{
if(player.x<p.x+p.w && player.x+player.w>p.x &&
player.y+player.h<=p.y+player.vy &&
player.y+player.h+player.vy>=p.y){
player.y=p.y-player.h;
player.vy=0;
player.jumping=false;
}
});

if(player.x<finish.x+finish.w &&
player.x+player.w>finish.x &&
player.y<finish.y+finish.h &&
player.y+player.h>finish.y){
won=true;
document.getElementById("message").innerText="YOU WON!";
}

ctx.fillStyle="gold";
ctx.fillRect(finish.x,finish.y,finish.w,finish.h);

ctx.fillStyle="#555";
platforms.forEach(p=>ctx.fillRect(p.x,p.y,p.w,p.h));

ctx.fillStyle="#000";
ctx.fillRect(player.x,player.y,player.w,player.h);

if(!won)requestAnimationFrame(update);
}
update();
</script>

